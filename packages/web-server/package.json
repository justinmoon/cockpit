{
	"name": "@mariozechner/pi-web-server",
	"version": "0.51.0",
	"description": "Web server for pi coding agent - dashboard and agent UI",
	"type": "module",
	"main": "src/index.ts",
	"bin": {
		"pi-web": "src/cli.ts"
	},
	"scripts": {
		"dev": "bun run --watch src/cli.ts",
		"start": "bun run src/cli.ts",
		"check": "biome check --write --error-on-warnings . && bun run typecheck",
		"typecheck": "tsc --noEmit",
		"test:e2e": "playwright test"
	},
	"dependencies": {
		"@elysiajs/html": "^1.1.1",
		"@elysiajs/static": "^1.1.1",
		"@mariozechner/pi-coding-agent": "^0.51.0",
		"elysia": "^1.2.25"
	},
	"devDependencies": {
		"@playwright/test": "^1.58.1",
		"@types/bun": "^1.2.5",
		"playwright": "^1.58.1",
		"typescript": "^5.7.3"
	},
	"author": "Mario Zechner",
	"license": "MIT"
}
